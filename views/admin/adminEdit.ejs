<%- include("../partials/header") %>
<h1>HELLO ADMIN</h1>

<form action="/admin" method="POST" enctype="multipart/form-data">

    <input type="text" name="title" id="" placeholder="product name" required />
    <input type="file" name="image" id="image" value="" required>
    <input type="text" name="description" id="" placeholder="product description" required />
    <input type="number" name="price" id="" placeholder="product price" required />
    <input type="text" name="origin" id="" placeholder="product origin country" required />
    <input type="text" name="blend" id="" placeholder="product grape blend" required />
    <button type="submit">Add</button>

</form>

<!-- Edit form -->
<form action="/adminEdit" method="post" enctype="multipart/form-data">
    <input type="text" name="title" id="" value="<%= product.title %>">
    <input type="text" name="description" id="" placeholder="product description" />
    <input type="number" name="price" id="" placeholder="product price" />
    <input type="text" name="origin" id="" placeholder="product origin country" />
    <input type="text" name="blend" id="" placeholder="product grape blend" />
    <input type="text" name="id" value="<%= product._id %>" hidden>
    <input type="file" name="image" id="image" value="" >
    <button type="submit">OK</button>
</form>

<div><a href="/admin">Back to admin</a></div>

