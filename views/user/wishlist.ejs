<%- include("../partials/header") %>

<h1><%= user.username %>'s wishlist!</h1>

<a href="/logout">Logout</a>
<a href="/productPage">Back to products</a>
<% if (wishes != '') { %>
<div><a href="/wishlistRemoveAll">Cleart your Wishlist</a></div>
<% } %>
<%- include("../helpers/messages") %>
<%- include("../helpers/errorMessage") %>


  <% wishes.forEach(wish => { %>
    <div>
        <p><%= wish.title %></p>
        <p><%= wish.price %> kr</p>
        <p><%= wish.date %></p>
        <a href="/wishlistDelete/<%= wish.id %>">Remove Item</a>
    </div>

  <% }) %>

<%- include("../partials/footer") %>
